        <payment>
            <yedpay>
                <active>1</active>
                <debug>0</debug>
                <is_gateway>1</is_gateway>
                <model>YedpayMagentoFacade</model>
                <payment_action>authorize</payment_action>
                <title>Yedpay</title>
                <currency>HKD</currency>
